    <script>
    $(document).ready(function () {
        $('.testmasters-menubar').css('display', 'block');
        $('.test-menubar li, .testmasters-menubar li').removeClass('active-page');
        $('.TestMaster, .TestBlock').addClass('active-page');
        GetAllTestMasters();
