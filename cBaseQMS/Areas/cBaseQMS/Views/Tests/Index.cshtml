        function CreateNewTest()
        {
            var test = {};
            test.TestMasterID = $("#ddlTestMaster").val();
            test.TestName = $("#testInputName").val();

            $.ajax({

            type: "POST",
            url: "@Url.Action("CreateTest", "Tests")",
            data: JSON.stringify({ testModel: test}),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                
            },
            failure: function (response) {
             
            },
            error: function (response) {
               
            }
        });

        }


        function GetAllTestMasters() {
            var ddlTestMasters = $("#ddlTestMaster");
        $.ajax({

            type: "GET",
            url: "@Url.Action("GetAllTestMasters", "Tests")",
            data: '{}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                $.each(response, function () {
                    ddlTestMasters.append($("<option></option>").val(this['Value']).html(this['Text']));
                });
            },
            failure: function (response) {
                alert(response.data);
            },
            error: function (response) {
                alert(response.data);
            }
            });

        }


    </script>
}
